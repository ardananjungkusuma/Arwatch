<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormBuy"
    android:background="@color/white">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arwatch_co"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/mayann"/>
    <TextView
        android:id="@+id/descTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Limited Watch for Limited People"
        android:textStyle="italic"
        android:fontFamily="@font/mayann"
        />
    <TextView
        android:id="@+id/titleForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Fill Detail Below"
        app:layout_constraintTop_toBottomOf="@id/descTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/monteros"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/nameBuyer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/titleForm"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:text="Name "
        android:textSize="20dp"
        android:fontFamily="@font/monteros"/>
    <EditText
        app:layout_constraintTop_toBottomOf="@id/nameBuyer"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/nameBuyerEdt"
        android:hint="Input Your Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/addressBuyer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/nameBuyerEdt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:text="Full Address"
        android:textSize="20dp"
        android:fontFamily="@font/monteros"/>
    <EditText
        app:layout_constraintTop_toBottomOf="@id/addressBuyer"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/addressBuyerEdt"
        android:hint="Input Your Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/emailBuyer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/addressBuyerEdt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:text="Email"
        android:textSize="20dp"
        android:fontFamily="@font/monteros"/>
    <EditText
        app:layout_constraintTop_toBottomOf="@id/emailBuyer"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Input Your Email"
        android:id="@+id/emailBuyerEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <CheckBox
        app:layout_constraintTop_toBottomOf="@id/emailBuyerEdt"
        android:layout_marginLeft="20dp"
        android:hint="Email Notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailnotif"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        app:layout_constraintTop_toBottomOf="@id/emailnotif"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/buttonOrder"
        android:background="@color/indian_red"
        android:text="ORDER NOW"
        android:onClick="buyNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/whyUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/buttonOrder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:onClick="whyUs"
        android:text="Why Us?"/>
</androidx.constraintlayout.widget.ConstraintLayout>